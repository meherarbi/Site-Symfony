{% extends 'base.html.twig' %}
{% block seo %}
    {{ parent() }}
{% endblock %}
{% block title %}Folio Shop{% endblock %}

{% block content %}
	<div class="ogami-breadcrumb">
		<div class="container">
			<ul>
				<li><a class="breadcrumb-link"href="{{ path('home') }}"><i class="fas fa-home"></i>Home</a></li>
				<li><a class="breadcrumb-link active" href="#">Mon Compte </a></li>
			</ul>
		</div>
	</div>
	<!-- End breadcrumb-->

	<div class="dashboard">
		<div class="container">
			<h2 class="text-center">Bienvenue {{ app.user.firstname }} dans votre compte </h2>
           
			<div class="row">
				<div class="col-md-3">
					<div class="profile-info">
						<img src="{{ asset('assets/images/avatar-person.svg') }}" alt="User avatar" class="rounded-circle mb-3" width="40%" height="40%">
						<h4>{{ app.user.firstname }} {{ app.user.lastname }}</h4>
						<p>{{ app.user.email }}</p>
					</div>
				</div>
				<div class="col-md-9">
					<div class="account-actions d-flex flex-row align-items-start mt-5">
						<a class="no-round-btn" href="{{ path('account_password') }}"> Change Mon password</a>
						<a class="no-round-btn" href="{{ path('account_address') }}"> Mes adresses</a>
						<a class="no-round-btn" href="{{ path('cart_index') }}"> Mes Commandes</a>
					</div>
				</div>
			</div>
		</div>
	</div>

	
{% endblock %}
