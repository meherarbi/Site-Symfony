{% extends 'base.html.twig' %}

{% block title %}Folio Shop{% endblock %}

{% block content %}
	<div class="ogami-breadcrumb">
		<div class="container">
			<ul>
				<li><a class="breadcrumb-link"href="{{ path('home') }}"><i class="fas fa-home"></i>Home</a></li>
				<li><a class="breadcrumb-link active" href="#">Changer de mot de passe</a></li>
			</ul>
		</div>
	</div>
	<!-- End breadcrumb-->

	<div class="password-change">
		<div class="container">
			<div class="row">
				<div class="col-12 col-md-6 mx-auto">
					<h1 class="title">Changer de mot de passe</h1>
                    <br>
					{% if notification %}
						<div class="alert alert-info">{{ notification }}</div>
					{% endif %}
					{{ form_start(form) }}
					<div class="form-group">
						{{ form_row(form.old_password, {'label': 'Mot de passe actuel *', 'attr': {'class': 'form-control no-round-input'}}) }}
					</div>
					<div class="form-group">
						{{ form_row(form.new_password.first, {'label': 'Nouveau mot de passe *', 'attr': {'class': 'form-control no-round-input'}}) }}
					</div>
					<div class="form-group">
						{{ form_row(form.new_password.second, {'label': 'Confirmer le mot de passe *', 'attr': {'class': 'form-control no-round-input'}}) }}
					</div>
					<div class="account-function">
						<button class="no-round-btn" type="submit">Update</button>
						<a class="create-account" href="{{ path('account') }}">Retour</a>
					</div>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
	<!-- End password change-->

    {% if redirect %}
        <script>
            setTimeout(function() {
                window.location.href = "{{ path('app_login') }}";
            }, 3000); // Redirige apr√®s 3 secondes
        </script>
    {% endif %}
{% endblock %}
